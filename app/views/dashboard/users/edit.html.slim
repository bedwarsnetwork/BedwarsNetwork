      .card.collection.z-depth-0
        .card-content
          .row
            .input-field.col.xs12
              = f.label :youtube_id
              = f.text_field :youtube_id, class: 'validate'
          .row
            .input-field.col.xs12
              = f.label :password
              = f.password_field :password, class: 'validate'
            .input-field.col.xs12
              = f.label :password_confirmation
              = f.password_field :password_confirmation, class: 'validate'
          .row
            .input-field.col.xs12
              = f.label :team_member_since
              = f.date_field :team_member_since, class: 'datepicker'
            - if @user.team_member_since
              .input-field.col.xs12
                = f.label :team_member_until
                = f.date_field :team_member_until, class: 'datepicker'
